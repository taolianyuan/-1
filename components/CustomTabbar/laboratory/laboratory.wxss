.menu-bg{width: 100%; height: 8vh; display: flex; position: absolute; top: 0}

.menu-item{flex-grow: 1; margin: 0 30rpx; font-size: 30rpx; color: #666; height: 80rpx; line-height: 80rpx; text-align: center;}

.menu-item.isChecked{font-weight: bold; color: #FF5173; border-bottom: 2px solid #FF5173;}

.scroll-view{height: 100%; width: 100%; }

.sauce-name{width: 100%; height: auto; margin: 20rpx;}

.creater-info{width: 100%; height: 80rpx; display: flex; padding: 0 20rpx;
}

.creater-icon{width: 60rpx; height: 60rpx; border-radius: 50%; background-color: #ececec;}

.creater-name{font-size: 34rpx; color: #666; margin-left: 20rpx; line-height: 60rpx;}

.sauce-content{color: #666; font-size: 30rpx; padding:20rpx;
}

.swiper{width: 100%; height: 80vh; position: absolute; top: 8vh;}

.sauce-count-bg{width: 100%; height: auto; display: flex; padding: 20rpx;}

.sauce-count-img{width: 30rpx; height: 30rpx;}

.sauce-count-figure{flex-grow: 1; font-size: 26rpx; color: #999; margin-left: 20rpx;}

.page{ padding: 20rpx; height: 100%;}

.list-masonry{
  column-count: 2;
  column-gap: 20rpx;
  height: 100%;
}

.item-masonry{
  margin-bottom: 20rpx;
  background-color: #fff;
  break-inside: avoid;
  box-sizing: border-box; 
  border:1px solid #ececec;
  box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.1); 
  -webkit-box-shadow:0 6px 11px 2px #00000010;/*for IOS*/ 
}

.image {
  width: 100%;
}




