
.header-bg-h{height: auto; width: 100%; background: #a31b38; display: flex;}

.header-bg-v{height: auto; width: 100%; flex-direction: column;}

.cellBg{width: 100%; height: 108rpx; background: #fff; margin-top: 10rpx; display: flex; align-items: center;  border-bottom: 1px solid #ececec;}

.cellIcon{width: 40rpx; height: 40rpx; margin-left: 30rpx;}

.cellTitle{width: 50%; height: 80rpx;  margin-left: 20rpx; align-items: center; justify-content: flex-start; display: flex; color: #333; background-color: #fff;  font-size: 30rpx; padding-left: 0; text-align: left;}

.menuBg{width: 100%; height: 150rpx; display: flex; flex-grow: 1; border-bottom: 1px solid #ececec;}

.menu-item{width: 250rpx; height: 150rpx; flex-direction: column; color: #333; font-size: 30rpx;}

.menu-item-badge{width: 40rpx; height: 40rpx; margin-top: 30rpx; margin-left: 105rpx; color: #666; justify-content: center; align-items: center; display: flex;}



.menu-item-title{width: 100%; height: 50%; color: #333; justify-content: center; align-items: flex-start; display: flex; font-size: 35rpx;}

.menu-item-title.isChecked{ border-bottom: 2px solid #a31b38; }

.button-authorization{width: 155rpx; height: 155rpx; margin: 72rpx 25rpx 72rpx 50rpx; border-radius: 50%;}

.arrow-right{height: 40rpx; width: 40rpx; margin-left: 30%; position: absolute; right: 30rpx;}

.header-userInfo-bg{width: 520rpx; height: auto; flex-direction: column;}

.header-userInfo-name{width: 100%; height: auto; margin-top: 60rpx; color: #fff; font-size: 35rpx;}

.header-userInfo-level-bg{width: 100%; height: 60rpx; margin-top: 10rpx; display: flex;}

.header-userInfo-level-title{width: auto; height: 100%; line-height: 60rpx; font-size: 30rpx; color: #fff;}

.header-userInfo-level-icon{width: 40rpx; height: 40rpx; margin: 10rpx;}

.header-useInfo-others-bg{width: 100%; height: auto; display: flex;}

.header-useInfo-others{height: 100%; flex-grow: 1;}

.header-useInfo-others.v{ border-right: 1px solid #ececec;}

.header-useInfo-others-item{height: auto; width: 100%; text-align: center; font-size: 30rpx; color: #fff;}

.header-userInfo-tags-bg{width: 100%; height: auto; padding: 20rpx 0; background-color: #a31b38;}

.header-userInfo-tag{width: 690rpx; height: 50rpx; margin: 0 30rpx; line-height: 50rpx; padding-left: 30rpx; border-radius: 25rpx; background-color: #911b34; color: #fff; font-size: 24rpx; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;}

.header-userInfo-production-fans-icon{width: 140rpx; height: 100rpx; text-align: center; line-height: 100rpx; font-size: 30rpx; color: #fff;}

button::after{
	border: none;
}







