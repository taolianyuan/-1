
.header{width: 100%; padding-bottom: 30rpx; background: #fff; margin-bottom: 50rpx;}

.swiper{width: 100%; height: 320rpx; }

.scroll-view{width: 100%; height: 80vh;}

.college-btn{width: 690rpx; height: 138rpx; margin-left: 30rpx; margin-top: 30rpx;}




.today-meal-img{width: 690rpx; height: 500rpx; border-radius: 30rpx; margin: 30rpx 30rpx  50rpx 30rpx; overflow: hidden; box-shadow:0 0 0 2rpx #ffb12a inset;/*for Android*/
  -webkit-box-shadow:0 6px 11px 2px #00000010;/*for IOS*/ }

.today-meal-mask{ width: 690rpx; height: 100rpx; margin-top: 400rpx; background-color: rgba(0, 0, 0 ,0.2); border-bottom-left-radius: 30rpx; border-bottom-right-radius: 30rpx; display: flex; align-items: center;}

.today-meal-title{width: 315rpx; color: #fff; font-size: 40rpx; margin-left: 30rpx; }

.today-like-icon{ width: 30rpx; height: 30rpx; margin-right: 20rpx;}

.today-like-count{ font-size: 30rpx; color: #fff; margin-right: 50rpx;}

.today-like-bg{width: 315rpx; display: flex; justify-content: flex-end; align-items: center;}

.today-duration{ font-size: 30rpx; color: #fff; }


.recommend-cell{width: 100%; height: auto; background: #fff; padding: 30rpx 0; display: inline-flex;}

.recommend-cell-icon{width: 200rpx; height: 200rpx; margin-left: 30rpx; background-color: #ececec;}

.recommend-cell-right-view{width: 490rpx; height: 200rpx;}

.recommend-cell-title{width: 100%; height: 60rpx; margin-left: 30rpx; font-size: 38rpx; color: #333;}

.recommend-cell-tags{width: 100%; height: 60rpx; display: flex; align-items: center; flex-wrap: wrap;}

.recommend-cell-tag{width: auto; height: auto; padding: 5rpx 10rpx; color: red; border: 1px solid red; font-size: 20rpx; border-radius: 6rpx; margin: 20rpx;}

.recommend-cell-creater-bg{width: 100%; height: 80rpx; display: flex; align-items: flex-end;}

.recommend-cell-creater-head{width: 60rpx; height: 60rpx; border-radius: 50%; background-color: #ececec; margin-left: 30rpx; margin-top: 10rpx;}

.recommend-cell-creater-text{width: auto; height: auto; color: #666; font-size: 20rpx; margin-left: 5rpx;}

.recommend-cell-creater-icon{width: 30rpx; height: 30rpx; margin-left: 30rpx;}



.model-title-bg{width: 690rpx; height: 90rpx; display: flex; align-items: center; margin-top: 30rpx;}

.model-title{width: 345rpx; height: 90rpx; line-height: 90rpx; padding-left: 30rpx; color: #333; font-size: 34rpx; font-weight: bold; }

.model-btn{width: 305rpx; height: 90rpx; line-height: 90rpx; text-align: right; color: #666; font-size: 30rpx;}



.activity-bg{width: 750rpx; height: 420rpx; display: flex; flex-wrap: wrap; white-space: nowrap; }

.activity-item-bg{width: 240rpx; height: 420rpx; display: inline-block; margin:30rpx 0 50rpx 30rpx;}

.activity-img{width: 240rpx; height: 320rpx; border-radius: 20rpx;  box-shadow:0 0 0 2rpx #ffb12a inset;/*for Android*/
  -webkit-box-shadow:0 6px 11px 2px #00000010;/*for IOS*/ }

.activity-title{width: 240rpx; height: 40rpx; text-align: center; font-size: 30rpx; color: #666;}



.arrow-right{height: 40rpx; width: 40rpx; position: absolute; right: 30rpx; float: right;}



.end-line{
  width: 100%; 
  height: 18vh; 
  background-color: #fff; 
  text-align: center; 
  padding-top: 50rpx; 
  color: #999; 
  font-size: 26rpx;
}




.refresh-container {
  box-sizing: border-box;
  font-size: 28rpx;
  /*color: #ff5173;*/
  background-color: #000;
  display: flex;
  width: 100%;
}
.refresh-layout {
  vertical-align: center;
  width: 100%;
  text-align: center;
  align-self: flex-end;
}

.refresh-loading {
  margin: 0 5px;
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
  color: #ff5173;
}

.refresh-tips {
  line-height: 30rpx;
  font-size: 26rpx;
  vertical-align: middle;
  margin: auto;
  color: #ff5173;
}





