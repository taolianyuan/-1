.comment-bg {
	width: 100%;
	z-index: 1000;
	display: flex;
	background-color: #fff;
	bottom: 0;
	position: fixed;
	background: #fff;
	align-items: center;
}

.comment-input {
	width: 80%;
	height: 80rpx;
	border-bottom: 1px solid #ececec;
	padding: 0 30rpx;
}

.comment-item {
	width: 15%;
	height: 60rpx;
	color: #fff;
	border-radius: 8rpx;
	font-size: 30rpx;
	line-height: 60rpx;
	text-align: center;
	background: #436EEE;
	margin-right: 12rpx;
}


.bottom-btn {
	width: 374rpx;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #fff;
}


.comment-list-bg {
	width: 100%;
	height: auto;
	padding: 0 24rpx 90rpx 30rpx;
}

.comment-cell {
	width: 570rpx;
	height: auto;
	margin-left: 97rpx;
	background-color: #f5f5f5;
}

.comment-info {
	width: 530rpx;
	height: auto;
	margin-left: 20rpx;
}

.comment-name {
	height: 100%;
	font-size: 30rpx;
	font-weight: bold;
	color: #92bbde;
}

.comment-content {
	height: auto;
	color: #666;
	font-size: 28rpx;
}



.comment-more {
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	text-align: center;
	font-size: 30rpx;
	color: #ff6400;
}

.reply-icon {
	font-size: 26rpx;
	color: #333;
	margin: 0 10rpx 0 10rpx;
}
