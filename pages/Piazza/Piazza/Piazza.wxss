.header-bg {
	width: 100%;
	height: 8vh;
	background-color: #a31b38;
	display: flex;
	justify-content: center;
	position: absolute;
	top: 0;
}

.header-item-bg {
	display: flex;
}

.header-item {
	color: #fff;
	height: 5vh;
	font-size: 32rpx;
	margin: 22rpx 80rpx 0 0;
}

.header-item.isChecked {
	border-bottom: 2px #fff solid;
	font-weight: bold;
}

.header-recommend {
	margin: 22rpx 0 0 0;
}

.swiper {
	width: 100%;
	height: 92vh;
	margin-top: 8vh;
}

/*.swiper.isIphoneX{height: 80vh;}*/

.scroll-view {
	width: 100%;
	height: auto;
	margin-top: 8vh;
}

.cell {
	width: 100%;
	background: #fff;
	position: relative;
	border-bottom: 1px solid #ececec;
}

.cell-header {
	width: 100%;
	box-sizing: border-box;
	padding: 50rpx 0 0 24rpx;
	display: inline-flex;
}

/* .cell-header-left-bg{width: 150rpx; height: 100%;} */

.cell-header-left-bg-icon {
	width: 84rpx;
	height: 84rpx;
	border-radius: 50%;
	background-color: #ececec;
}

.cell-header-left-bg-time {
	width: 100%;
	height: 30rpx;
	color: #666;
	font-size: 22rpx;
	text-align: center;
}

.cell-header-middle-bg {
	width: 420rpx;
	margin-left: 24rpx;
	height: auto;
}

.cell-header-middle-bg-name {
	width: 100%;
	color: #8aa8bd;
	font-size: 34rpx;
}

.cell-header-right-btn {
	width: 120rpx;
	height: 60;
	border-radius: 8rpx;
	text-align: center;
	background: #fff;
	border: 1px solid #666;
	color: #333;
	font-size: 28rpx;
}

.cell-content-title {
	margin-left: 132rpx;
	margin-bottom: 32rpx;
	width: 570rpx;
	background: #fff;
	font-size: 30rpx;
}

.cell-content-img-bg {
	margin-left: 132rpx;
	margin-top: 50rpx;
	width: 570rpx;
	height: auto;
	display: flex;
	flex-wrap: wrap;
	border-radius: 30rpx;
	box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
	-webkit-box-shadow: 0 6px 11px 2px #00000010;
}


.cell-bottom-view-bg {
	width: 570rpx;
	margin-left: 132rpx;
	background: #fff;
	display: flex;
	justify-content: space-between;
	margin-top: 26rpx;
	margin-bottom: 50rpx;
}

.cell-bottom-view-item {
	display: flex;
	/* vertical-align: middle; */
	align-items: center;
}

.cell-bottom-view-item-icon {
	width: 40rpx;
	height: 40rpx;
	margin-top: 10rpx;
}

.cell-bottom-view-item-title {
	font-size: 30rpx;
	color: #666;
	margin-left: 10rpx;
	margin-top: 15rpx;
}

.img-number-bg {
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.creater-right-level {
	width: 30rpx;
	height: 37rpx;
	margin-left: 10rpx;
}


.share {
	background-color: #fff;
	padding: 0;
}


button::after {
	border: none;
}


.recommend-cell {
	width: 100%;
	height: auto;
	background: #fff;
	display: inline-flex;
	padding: 30rpx;
}

.recommend-cell-icon {
	width: 200rpx;
	height: 200rpx;
	background-color: #ececec;
}

.recommend-cell-right-view {
	width: 490rpx;
	height: 200rpx;
}

.recommend-cell-title {
	width: 100%;
	height: 60rpx;
	margin-left: 30rpx;
	font-size: 38rpx;
	color: #333;
}

.recommend-cell-tags {
	width: 100%;
	height: 60rpx;
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	overflow: hidden;
	white-space: nowrap;
}

.recommend-cell-tag {
	width: auto;
	height: auto;
	padding: 5rpx 10rpx;
	color: red;
	border: 1px solid red;
	font-size: 20rpx;
	border-radius: 6rpx;
	margin: 20rpx;
}

.recommend-cell-creater-bg {
	width: 100%;
	height: 80rpx;
	display: flex;
	align-items: flex-end;
}

.recommend-cell-creater-head {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	background-color: #ececec;
	margin-left: 30rpx;
	margin-top: 10rpx;
}

.recommend-cell-creater-text {
	width: auto;
	height: auto;
	color: #666;
	font-size: 20rpx;
	margin-left: 5rpx;
}

.recommend-cell-creater-icon {
	width: 30rpx;
	height: 30rpx;
	margin-left: 30rpx;
}


