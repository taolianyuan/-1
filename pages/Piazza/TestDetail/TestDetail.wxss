
.swiper{width: 100%; height: 750rpx;}


.creater-bg{width: 100%; height: auto; padding: 30rpx 0; display: flex; align-items: center;}

.creater-header{width: 60rpx; height: 60rpx; border-radius: 50%; margin-left: 30rpx; background-color: #ececec;}

.creater-name{font-size: 30rpx;  color: #333; margin-left: 20rpx; line-height: 40rpx; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;}

.creater-time{color: #666; font-size: 26rpx; position: absolute; right: 30rpx;}

.test-comment{width: 690rpx; height: auto; padding: 30rpx; font-size: 30rpx; color: #666; border-bottom: 1px solid #ececec;}

.test-btn{width: 120rpx; height: 120rpx; margin-top: 100rpx; border-radius: 50%; background-color: #FF5173; display: flex; justify-content: center; align-items: center; margin-left: 315rpx;}

.test-icon{width: 40rpx; height: 40rpx;}

.like-count{width: 100%; height: auto; margin-top: 20rpx; text-align: center; font-size: 30rpx; color: #666;}

.levelPhoto{width: 48rpx; height: 48rpx;}

.swiperWrap{position: relative;}

