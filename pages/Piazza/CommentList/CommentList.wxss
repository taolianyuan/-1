.comment-list-bg{width: 100%; height: auto; padding: 30rpx;}

.comment-cell{width: 690rpx; height: auto;}

.comment-list-title{font-size: 40rpx; color: #a31b38; font-weight: bold; padding: 60rpx 0 30rpx 30rpx;}

.comment-name-icon-bg{width: 100%; height: 100rpx; line-height: 60rpx; display: flex; align-items: center;}

.comment-icon{width: 100rpx; height: 100rpx; border-radius: 50%;}

.comment-name{margin-left: 50rpx; height: 100%; font-size: 30rpx; color: #666; font-weight: bold; line-height: 100rpx;}

.comment-content{padding: 20rpx 0; box-sizing: border-box; margin-left: 150rpx; height: auto; width: 550rpx; color: #666; font-size: 30rpx; }

.comment-time{width: 690rpx; height: 60rpx; font-size: 24rpx; line-height: 60rpx; text-align: right;}

.creater-right-level{width: 30rpx; height: 37rpx; margin-left: 10rpx; vertical-align: middle;}

.reply-icon{font-size:32rpx; color: #333; margin: 0 10rpx 0 10rpx; }

.right-name{margin-left: 0rpx;}