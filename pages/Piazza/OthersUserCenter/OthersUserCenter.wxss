.header {
  width: 100%;
  height: 20vh;
  display: flex;
  background-color: #a31b38;
}

.header-left-view {
  width: 180rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #ececec;
}

.header-mid-view {
  width: 420rpx;
  height: 100%;
  /* padding-top: 30rpx; */
  line-height: 20vh
}

.header-mid-name {
  width: 100%;
  height: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
  font-size: 40rpx;
}

.header-mid-name-level-friend {
  width: 100%;
  height: auto;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.header-mid-info-level-title {
  width: auto;
  height: auto;
  color: #fff;
  font-size: 28rpx;
}

.header-mid-info-level-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  background-color: #ececec;
}

.header-mid-info-item {
  width: 210rpx;
  height: 100%;
  display: flex;
  color: #fff;
  font-size: 28rpx;
  align-items: center;
}

.header-mid-v-line {
  width: 1xp;
  height: 100%;
  background-color: #fff;
}

.header-right-view {
  width: 150rpx;
  margin-top: 35rpx;
  margin-right: 15rpx;
  height: 70%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}

.header-right-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border: 1px solid #fff;
  border-radius: 6rpx;
}

.dish-cell-date {
  font-size: 35rpx;
  color: #333;
  padding-left: 30rpx;
  padding-top: 30rpx;
}

.menuBg {
  width: 702rpx;
  height: 144rpx;
  display: flex;
  margin-left: 24rpx;
  background-color: #fff;
  border-radius: 24rpx;
  position: relative;
  top: -30rpx;
  border: 1px solid #ececec;
  box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
  -webkit-box-shadow: 0 6px 11px 2px #00000010; /*for IOS*/
}

.menu-item {
  width: 234rpx;
  height: 150rpx;
  color: #333;
  font-size: 30rpx;
}

.menu-item-badge {
  width: 100%;
  text-align: center;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.menu-item-title {
  width: 100%;
  height: 50%;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 72rpx;
  color: #666;
}

.menu-item-title.isChecked {
  color: #a31b38;
}

.menu-item-badge.isChecked {
  color: #a31b38;
}

.swiper {
  width: 100%;
  height: 70vh;
}

.swiper-scroll-view {
  width: 100%;
  height: 100%;
}

.cell {
  width: 100%;
  height: auto;
  display: flex;
  background-color: #fff;
  flex-direction: column;
}

.dish-header {
  width: 100%;
  height: auto;
  margin-top: 60rpx;
  padding-left: 30rpx;
  color: #333;
  font-size: 60rpx;
  font-weight: bold;
}

.dish-cell-content-bg {
  width: 600rpx;
  height: auto;
  padding: 30rpx 30rpx 30rpx 0;
  background: #fff;
  margin-left: 150rpx;
  display: flex;
  border-bottom: 1px solid #ececec;
}

.dish-cell-content {
  width: 370rpx;
  height: auto;
}

.dish-cell-content-title {
  width: auto;
  height: 100rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.dish-cell-content-time {
  width: auto;
  height: 100rpx;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: flex-end;
}

.dish-header-img {
  width: 200rpx;
  height: 200rpx;
}

.post-header-img-box {
  width: 220rpx;
  height: 220rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.post-header-img-l {
  width: 100%;
  height: 100%;
}

.post-header-img-m {
  width: 100rpx;
  height: 200rpx;
}

.post-header-img-s {
  width: 100rpx;
  height: 100rpx;
}

.post-cell-content-bg {
  width: 600rpx;
  height: auto;
  padding: 30rpx 30rpx 30rpx 0;
  background: #fff;
  margin-left: 150rpx;
  display: flex;
  border-bottom: 1px solid #ececec;
}

.post-cell-content {
  width: 370rpx;
  height: auto;
}

.post-cell-content-title {
  width: auto;
  height: 90rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-cell-content-time {
  width: auto;
  height: 100rpx;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: flex-end;
}

.offical {
  width: auto;
  height: auto;
  padding: 5rpx 10rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: #f3ae3d;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.offical-bg {
  width: 420rpx;
  height: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.offical-name {
  width: auto;
  height: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
  font-size: 40rpx;
}

.dish-cell-date-wrap {
  display: flex;
}

.dish-cell-date-mouth {
  font-size: 24rpx;
  color: #666;
  margin-top: 17rpx;
  margin-left: -20rpx;
}

.official-btns {
  margin-top: 90rpx;
}
