/* pages/Home/Dinner/Details/Details.wxss */

.goods-list{
 padding: 0 30rpx;
}

.goods {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 30rpx 0;
}

.goods-lf {
  flex: 1;
}

.goods-lr {
  flex: 2;
}

.goods-lr image {
  width: 120rpx;
  height: 120rpx;
}


.goods-ls{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.goods-name{
  padding-left: 20px;
  font-size: 28rpx;
}


.active{
  border: 1px solid red
}


.fotter{
  width: 100%;
  display: flex;
  background: rgb(20, 118, 184);
  position: fixed;
  bottom: 0;
  line-height: 100rpx;
  justify-content: space-between;
  color: #fff;
}

.fotters{
  margin-left: 30rpx;
}

.bts{
  width: 220rpx;
  border: 1px solid #eee;
  text-align: center;
  border-radius: 30rpx;
  margin-right: 30rpx;
}

















.label-1, .label-2{
    margin-bottom: 15px;
}
.label-1__text, .label-2__text {
    display: inline-block;
    vertical-align: middle;
}

.label-1__icon {
    position: relative;
    margin-right: 10px;
    display: inline-block;
    vertical-align: middle;
    width: 18px;
    height: 18px;
    background: #fcfff4;
}

.label-1__icon-checked {
    position: absolute;
    top: 3px;
    left: 3px;
    width: 12px;
    height: 12px;
    background: #1aad19;
}


.label-2__icon {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
    width: 18px;
    height: 18px;
    background: #fcfff4;
    border-radius: 50px;
}

.label-2__icon-checked {
    position: absolute;
    left: 3px;
    top: 3px;
    width: 12px;
    height: 12px;
    background: #1aad19;
    border-radius: 50%;
}

.label-4_text{
    text-align: center;
    margin-top: 15px;
}