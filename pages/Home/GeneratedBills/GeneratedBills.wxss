/* pages/Home/GeneratedBills.wxss */

.image-wrap {
	width: 100%;
	height: 772rpx;
	margin-top: 43rpx;
	margin-bottom: 49rpx;
}

.count-image {
	width: 702rpx;
	height: 772rpx;
	margin-left: 24rpx;
}

.tip-title {
	font-size: 40rpx;
	color: #333;
	font-weight: 500;
	padding-left: 24rpx;
}

.swiper {
	width: 683rpx;
	height: 90rpx;
	margin: 12rpx 0 0 24rpx;
	font-size: 32rpx;
	color: #666;
	font-weight: 500;
}

.statement {
	width: 100%;
	text-align: center;
	font-size: 24rpx;
	font-weight: 400;
	color: #ccc;
	margin-top: 31rpx;
}

.bottom-wrap {
	width: 100%;
	height: 66rpx;
	display: flex;
	justify-content: space-around;
	position: fixed;
	left: 0;
	bottom: 24rpx;
}

.bottom-wrap view {
	width: 200rpx;
	height: 100%;
	font-size: 32rpx;
	text-align: center;
	line-height: 66rpx;
	border-radius: 8rpx;
	box-shadow: -2px 1px 10px #ccc;
}

.friend {
	color: #333;
	background: #fff;
}

.save {
	color: #fff;
	background: #09BB07;
}

.btn {
	position: absolute;
	width: 200rpx;
	height: 66rpx;
	left: 90rpx;
	top: 0;
	background: transparent;
}

button:after {
	border: none;
}

.mask {
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.6);
	position: absolute;
	left: 0;
	top: 0;
	z-index: 100;
}

.mask-image{
	width: 704rpx;
	height: 340rpx;
	margin-top: 372rpx;
	margin-left: 22rpx;
}