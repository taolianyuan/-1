.menu-bg{width: 100%; height: 10vh; display: flex; position: fixed; top: 0; background-color: #fff;}

.menu-item{flex-grow: 1; margin: 0 30rpx; font-size: 30rpx; color: #666; height: 80rpx; line-height: 80rpx; text-align: center;}

.menu-item.isChecked{font-weight: bold; color: #FF5173; border-bottom: 2px solid #FF5173;}

.scroll-view{height: 90vh; width: 100%; margin-top: 10vh;}

.sauce-name{width: 100%; font-weight: 600; padding-left: 12rpx; font-size: 32rpx; color: #333; height: auto; margin-top: 24rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}

.creater-info{width: 100%; height: 80rpx; box-sizing: border-box; padding: 24rpx 0 0 12rpx;}

.creater-icon{width: 40rpx; height: 40rpx; float: left; border-radius: 50%;}

.creater-name{font-size: 28rpx; color: #333; margin-left: 5rpx; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; float: left;}

.sauce-content{color: #333; font-size: 24rpx; box-sizing: border-box; padding: 0 12rpx 0 12rpx; overflow:hidden; text-overflow: ellipsis;
display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical;}

.swiper{width: 100%; height: 90vh; position: absolute; top: 10vh;}

.sauce-count-bg{width: 100%; height: auto; box-sizing: border-box; display: flex; padding: 20rpx 0 0 12rpx;}

.sauce-count-img{width: 28rpx; height: 28rpx; margin-top: 4rpx;}

.sauce-count-figure{font-size: 24rpx; color: #666; margin-left: 5rpx;}

.eye-icon{margin-left: 32rpx;}

.page{ padding: 20rpx; height: 100%;}

.list-masonry{
  height: auto;
  margin-top: 10vh;
  overflow: hidden;
}

.item-masonry{
  float: left;
  width: 339rpx;
  height: 608rpx;
  margin-left: 24rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  box-sizing: border-box; 
  box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
  -webkit-box-shadow:0 6px 11px 2px #00000010;/*for IOS*/ 
}

.image {
  width: 339rpx;
  height: 339rpx;
  vertical-align: middle;
}




