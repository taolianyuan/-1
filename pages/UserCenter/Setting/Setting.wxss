/* pages/UserCenter/Setting/Setting.wxss */
.cellTitle {
	width: 50%;
	height: 80rpx;
	margin-left: 20rpx;
	align-items: center;
	justify-content: flex-start;
	display: flex;
	color: #333;
	background-color: #fff;
	font-size: 30rpx;
	padding-left: 0;
	text-align: left;
}

button::after {
	border: none;
}

.item{
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
	border-bottom: 1rpx solid #ccc;
	position: relative;
}

.placeholder{
	width: 100%;
	height: 30rpx;
	background: #E6E6E6;
}

.right-icon{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	right: 5px;
	top: 50%;
	transform: translateY(-50%);
}

.toast{
	width: 375rpx;
	height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background:rgba(0,0,0,0.5);
	border-radius: 50rpx;
	position: fixed;
	top: 24rpx;
	z-index: 20;
	right: 98rpx;
	opacity: 0;
	transition: opacity linear .5s;
}

.toast-active{
	opacity: 1;
}



.toastTitle{
	color: #fff;
	font-size: 32rpx;
	letter-spacing: 2rpx;
}

.toastIcon{
	
	border-top: 25rpx solid rgba(0,0,0,0.5);
	border-bottom: 25rpx solid transparent;
	border-left: 25rpx solid transparent;
	border-right: 25rpx solid transparent;
	position: absolute;
	right: 28rpx;
	top: -48rpx;
	transform: rotate(181deg);
	z-index: 21;
}