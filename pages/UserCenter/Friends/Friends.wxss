.cell {
	width: 100%;
	background: #fff;
	border-bottom: 1px solid #ececec;
}

.cell-header {
	width: 100%;
	box-sizing: border-box;
	padding: 50rpx 0 0 24rpx;
	display: inline-flex;
}

/* .cell-header-left-bg {
	width: 120rpx;
	height: 120rpx;
} */

.cell-header-left-bg-icon {
	width: 84rpx;
	height: 84rpx;
	border-radius: 50%;
	background-color: #ececec;
}

.cell-header-left-bg-time {
	width: 100%;
	height: 30rpx;
	color: #666;
	font-size: 22rpx;
	text-align: center;
}

.cell-header-middle-bg {
	width: 420rpx;
	height: auto;
	margin-left: 15rpx;
}

.cell-header-middle-bg-name {
	width: 100%;
	color: #8aa8bd;
	font-size: 34rpx;
}

.cell-header-right-btn {
	width: 120rpx;
	height: 60;
	border-radius: 8rpx;
	text-align: center;
	background: #fff;
	border: 1px solid #666;
	color: #333;
	font-size: 28rpx;
}

.cell-content-title {
	margin-left: 132rpx;
	margin-bottom: 32rpx;
	width: 570rpx;
	background: #fff;
	font-size: 30rpx;
}

.cell-content-img-bg {
	margin-left: 132rpx;
	margin-top: 20rpx;
	width: 570rpx;
	height: auto;
	display: flex;
	flex-wrap: wrap;
	border-radius: 30rpx;
	box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
	-webkit-box-shadow: 0 6px 11px 2px #00000010;
}

.cell-content-img {
	width: 100%;
	margin: auto 0;
	border-radius: 30rpx;
	box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
	-webkit-box-shadow: 0 6px 11px 2px #00000010;
	/*for IOS*/
}

.cell-post-img {
	width: 170rpx;
	height: 170rpx;
	margin-left: 15rpx;
	margin-top: 10rpx;
}

.cell-dish-img {
	width: 510rpx;
	margin: 0 auto;
	border-radius: 10rpx;
}

.cell-bottom-view-bg {
	width: 570rpx;
	margin-left: 132rpx;
	background: #fff;
	display: flex;
	justify-content: space-between;
	margin-top: 26rpx;
	margin-bottom: 50rpx;
}

.cell-bottom-view-item {
	display: flex;
	/* vertical-align: middle; */
	align-items: center
}

.cell-bottom-view-item-icon {
	width: 40rpx;
	height: 40rpx;
	margin-top: 10rpx;
}

.cell-bottom-view-item-title {
	font-size: 30rpx;
	color: #666;
	margin-left: 10rpx;
	margin-top: 15rpx;
}

.img-number-bg {
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.share {
	background-color: #fff;
	padding: 0;
}

button::after {
	border: none;
}


.image-1 {
	width: 100%;
	margin: auto 0;
}

.image-2 {
	width: 280rpx;
	height: 570rpx;
}

.image-3 {
	width: 280rpx;
	height: 280rpx;
}

.image-4 {
	width: 180rpx;
	height: 180rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
}




.comment-bg {
	width: 100%;
	height: 10vh;
	z-index: 1000;
	display: flex;
	background-color: #fff;
	z-index: 100;
	position: fixed;
}

.comment-input {
	width: 80%;
	height: 80rpx;
	padding: 0 30rpx;
	border-bottom: 1px solid #ececec;
	padding: 0 30rpx;
}

.comment-item {
	width: 20%;
	height: 80rpx;
	color: #666;
	font-size: 30rpx;
	line-height: 80rpx;
	text-align: center;
}


.bottom-btn {
	width: 374rpx;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #fff;
}


.comment-list-bg {
	width: 100%;
	height: auto;
	padding: 0 30rpx 90rpx 30rpx;
}

.comment-cell {
	width: 690rpx;
	height: auto;
	display: flex;
	padding: 30rpx 0;
	border-bottom: 1px solid #ececec;
}

.comment-left {
	width: 90rpx;
	height: auto;
}

.comment-right {
	width: 580rpx;
	height: auto;
	margin-left: 20rpx;
}

.comment-list-title {
	font-size: 40rpx;
	color: #a31b38;
	font-weight: bold;
	padding: 60rpx 0 30rpx 30rpx;
}

.comment-name-icon-bg {
	width: 100%;
	height: 60rpx;
	display: flex;
	align-items: center;
	margin: 15rpx 0 0 15rpx;
}

.comment-icon {
	width: 90rpx;
	height: 90rpx;
	border-radius: 50%;
}

.comment-time {
	width: 100%;
	height: auto;
	margin-top: 10rpx;
	text-align: center;
	font-size: 22rpx;
	color: #999;
}

.comment-name {
	height: 100%;
	line-height: 60rpx;
	font-size: 30rpx;
	font-weight: bold;
}

.comment-content {
	padding: 30rpx 10rpx;
	height: auto;
	width: 550rpx;
	color: #666;
	font-size: 30rpx;
}



.comment-more {
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	text-align: center;
	font-size: 30rpx;
	color: #ff6400;
}
