.header-bg-h {
	height: 240rpx;
	width: 100%;
	background: #a31b38;
	display: flex;
}

.header-bg-v {
	height: auto;
	width: 100%;
	flex-direction: column;
}

.cellBg {
	width: 100%;
	height: 108rpx;
	background: #fff;
	margin-top: 10rpx;
	display: flex;
	align-items: center;
	border-bottom: 1px solid #ececec;
}

.cellIcon {
	width: 40rpx;
	height: 40rpx;
	margin-left: 30rpx;
}

.cellTitle {
	width: 50%;
	height: 80rpx;
	margin-left: 20rpx;
	align-items: center;
	justify-content: flex-start;
	display: flex;
	color: #333;
	background-color: #fff;
	font-size: 30rpx;
	padding-left: 0;
	text-align: left;
}

.menuBg {
	width: 702rpx;
	height: 144rpx;
	display: flex;
	margin-left: 24rpx;
	background-color: #fff;
	border-radius: 24rpx;
	position: relative;
	top: -30rpx;
	border: 1px solid #ececec;
	box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
	-webkit-box-shadow: 0 6px 11px 2px #00000010;
	/*for IOS*/
}

.menu-item {
	width: 234rpx;
	height: 150rpx;
	color: #333;
	font-size: 30rpx;
}

.menu-item-badge {
	width: 100%;
	text-align: center;
	margin-top: 30rpx;
	font-size: 26rpx;
	color: #A31B38;
}

.menu-item-title {
	width: 100%;
	height: 50%;
	font-size: 32rpx;
	font-weight: bold;
	text-align: center;
	line-height: 72rpx;
	color: #A31B38;
}

.login-btn {
	width: 110rpx;
	letter-spacing: 3rpx;
	height: 40rpx;
	background: #ccc;
	color: #000;
	font-size: 24rpx;
	text-align: center;
	line-height: 40rpx;
	border-radius: 9rpx;
	margin-top: 90rpx;
}



.button-authorization {
	width: 155rpx;
	height: 155rpx;
	margin: 24rpx;
	border-radius: 50%;
  display: block;
  margin-left: 30rpx;
  margin-top: 46rpx;
}

.arrow-right {
	height: 40rpx;
	width: 40rpx;
	margin-left: 30%;
	position: absolute;
	right: 30rpx;
}

.header-userInfo-bg {
	width: 520rpx;
	height: auto;
	flex-direction: column;
}

.header-userInfo-name {
	width: 100%;
	height: auto;
	/* margin-top: 24rpx; */
	color: #fff;
	font-size: 35rpx;
  line-height: 240rpx;
}

.header-userInfo-level-bg {
	width: 100%;
	height: 60rpx;
	display: flex;
}

.header-userInfo-level-title {
	width: auto;
	height: 100%;
	line-height: 60rpx;
	font-size: 30rpx;
	color: #fff;
}

.header-userInfo-level-icon {
	width: 40rpx;
	height: 40rpx;
	margin: 10rpx;
}

.header-useInfo-others-bg {
	width: 100%;
	height: auto;
	display: flex;
}

.header-useInfo-others {
	height: 100%;
	flex-grow: 1;
}

.header-useInfo-others.v {
	border-right: 1px solid #ececec;
}

.header-useInfo-others-item {
	height: auto;
	width: 100%;
	text-align: center;
	font-size: 24rpx;
	color: #fff;
}

.header-userInfo-tags-bg {
	width: 100%;
	height: auto;
	padding-bottom: 60rpx;
	background-color: #a31b38;
}

.header-userInfo-tag {
	width: 702rpx;
	margin-left: 26rpx;
	height: 40rpx;
	line-height: 40rpx;
	box-sizing: border-box;
	padding: 0 52rpx;
	border-radius: 25rpx;
	background-color: #911b34;
	color: #fff;
	font-size: 24rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.header-userInfo-production-fans-icon {
	width: 140rpx;
	height: 100rpx;
	text-align: center;
	line-height: 100rpx;
	font-size: 30rpx;
	color: #fff;
}

button::after {
	border: none;
}
