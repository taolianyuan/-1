/* pages/UserCenter/voiceSetting/voiceSetting.wxss */
.voice-bg{
	width: 100%;
	height: 80rpx;
	background: #E6E6E6;
	line-height: 80rpx;
	font-size: 36rpx;
	color: #9B9B9B;
	box-sizing: border-box;
	padding-left: 40rpx;
}

.voiceWrap{
	width: 100%;
	box-sizing: border-box;
	padding-left: 24rpx;
}

.voice{
	width: 100%;
	height: 80rpx;
	border-bottom: 1px solid #EDECEC;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.voice-title{
	width: 204rpx;
	font-size: 36rpx;
	color: #4A4A4A;
}

.btn-wrap{
	width: 150rpx;
	display: flex;
	align-items: center;
}

.btn{
	width: 31rpx;
	height: 37rpx;
	vertical-align: middle;
	margin-top: 6rpx;
	margin-right: 8rpx;
}

.btn-text{
	font-size: 32rpx;
	color: #F84545;
}

radio .wx-radio-input {
	width: 33rpx;
	height: 33rpx;
	border-radius: 50%;
	margin-right: 24rpx;
}

radio .wx-radio-input.wx-radio-input-checked::before {
	border-radius: 50%;
	width: 37rpx;
	height: 37rpx;
	color: #fff;
	font-size: 30rpx;
	line-height: 37rpx;
	text-align: center;
	background: transparent;
	transform: translate(-50%, -50%) scale(1);
	-webkit-transform: translate(-50%, -50%) scale(1);

}