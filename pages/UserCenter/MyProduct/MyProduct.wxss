

.croll-view{width: 100%; height: 100vh; background-color: #fff;}





.header-img-box{width: 220rpx; height: auto; display: flex; flex-wrap: wrap; justify-content: space-between; }

.header-img-l{width: 100%; height: 100%;}

.header-img-m{width: 100rpx; height: 200rpx;}

.header-img-s{width: 100rpx; height: 100rpx;}




.cell{width: 100%; height: auto;}

.cell-content-bg{width: 600rpx; height: auto; padding: 30rpx 30rpx 30rpx 0; background: #fff; margin-left: 150rpx; display: flex; border-bottom: 1px solid #ececec;}

.cell-content{width: 370rpx; height: auto;}

.cell-content-title{width: auto; height: 170rpx; margin-left: 20rpx; font-size: 28rpx; font-weight: 600; color: #333; }

.cell-content-time{width: auto; height: 30rpx;  margin-left: 20rpx; font-size: 22rpx; color: #666; display: flex; align-items: flex-end;}


.text-bg{width: 570rpx; margin-left: 150rpx;  height: auto; padding: 30rpx 30rpx 30rpx 0; background: #fff; border-bottom: 1px solid #ececec; background-color: #f6f6f6;}

.text-title{margin-left: 20rpx; font-size: 32rpx; color: #333;}

.text-time{ margin-top: 20rpx; margin-left: 20rpx; font-size: 26rpx; color: #666; display: flex; justify-content: flex-end; align-items: flex-end;}




.menu-bg{width: 100%; height: auto; background: #fff; display: inline-flex;}

.menu-item-bg{flex-grow: 1; height: 100%; display: flex; justify-content: center; align-items: center;}

.menu-item{ padding: 20rpx 10rpx; color: #666; font-size: 30rpx;}

.menu-item.isChecked{border-bottom: 2px solid #FF5173; color: #FF5173; font-weight: bold;}

.header{width: 100%; height: auto; padding: 60rpx 30rpx 100rpx 30rpx; display: flex;}

.header-title{width: 200rpx; height: auto; font-size: 36rpx; color: #333; font-weight: 600;}

.header-img{width: 160rpx; height: 160rpx;}